{
  "logs": {
    "logs_folder": "logs-danylo",
    "data_log_folder": "data-danylo"
  },
  "mono": {
    "baseUrl": "https://api.monobank.ua",
    "routes": {
      "exchange_rates": "bank/currency",
      "client_info": "personal/client-info",
      "webhook_init": "personal/client-info",
      "statement": "personal/statement/{account}/{from}/{to}"
    },
    "options": {
      "max_statement_days": 30,
      "requests_interval_sec": 60,
      "transfer_mcc": 4829,
      "add_mcc_tag": true,
      "default_start_date": "2023-10-25"
    }
  },
  "lunchmoney": {
    "baseUrl": "https://dev.lunchmoney.app",
    "routes": {
      "transactions": "v1/transactions",
      "transaction_group": "v1/transactions/group",
      "accounts": "v1/assets"
    },
    "options": {
      "check_transaction_for_last_n_days": "30",
      "group_max_time_diff_secs": 30
    }
  },
  "firefly": {
    "baseUrl": "http://fireflyIII:8080",
    "routes": {
      "transactions": "api/v1/transactions",
      "accounts": "api/v1/accounts"
    },
    "options": {
      "check_transaction_for_last_n_days": "30",
      "group_max_time_diff_secs": 30
    }
  },
  "firefly-importer": {
    "auto_import_url": "http://fireflyIII-importer-danylo:8080",
    "folder": "/data/import-folder"
  },
  "mappings": {
    "accounts": {
      "Mono Black": {
        "currency": "uah",
        "type": "black"
      },
      "Mono White": {
        "currency": "uah",
        "type": "white"
      },
      "Mono USD": {
        "currency": "usd",
        "type": "black"
      },
      "Mono FOP UAH": {
        "currency": "uah",
        "type": "fop"
      },
      "Mono FOP USD": {
        "currency": "usd",
        "type": "fop"
      }
    }
  }
}